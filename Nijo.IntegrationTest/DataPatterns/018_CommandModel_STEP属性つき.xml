<?xml version="1.0" encoding="utf-8" ?>

<自動テストで作成されたプロジェクト RootNamespace="MyApp.Core">

  <部署 is="write-model-2 generate-default-read-model">
    <部署ID is="word key" />
    <部署名 is="word" />
  </部署>

  <従業員 is="write-model-2 generate-default-read-model">
    <内部ID is="uuid key" />
    <従業員コード is="word" />
    <名前 is="word name" />
    <区分 is="従業員区分" />
    <所属部署 is="ref-to:部署" />
  </従業員>

  <従業員区分 is="enum">
    <ベテラン />
    <ビギナー />
  </従業員区分>

  <従業員データ一括取り込み is="command">
    <これは最初の画面です is="step:1">

      <!-- ファイル型が実装されていないのでwordで代替 -->
      <取込ファイル is="word" />
      <!-- <取込ファイル is="file" /> -->

      <対象年月一覧 is="children">
        <対象年月 is="year-month" />
        <基準日 is="date" />
        <処理区分 is="E_年月処理区分" />
      </対象年月一覧>
    </これは最初の画面です>

    <これは2画面目です is="step:2">
      <特定データのみ is="child">
        <従業員 is="ref-to:従業員" />
      </特定データのみ>
      <全部更新 is="child" />
    </これは2画面目です>
  </従業員データ一括取り込み>

  <E_年月処理区分 is="enum">
    <全件洗い替え />
    <差分更新 />
  </E_年月処理区分>

  <重要情報の通知 is="command">
    <送信先一覧 is="children">
      <送信先 is="ref-to:従業員" />
    </送信先一覧>
  </重要情報の通知>

</自動テストで作成されたプロジェクト>
